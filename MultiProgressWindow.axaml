<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="BrickVaultApp.MultiProgressWindow"
        Title="Extracting"
        CanResize="False"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
  <DockPanel Margin="10">
    <Button DockPanel.Dock="Bottom" Content="{Binding ButtonMessage}" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Cancel_Click"/>
    
    <ScrollViewer>
      <StackPanel Margin="10">
        <ItemsControl ItemsSource="{Binding Items}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal" Margin="0 5 0 5" VerticalAlignment="Center">
                <TextBlock Width="200" Text="{Binding FileName}" VerticalAlignment="Center"/>
                <ProgressBar Width="150" Height="20" Value="{Binding Progress}"/>
                <TextBlock Width="100" Text="{Binding Message}" VerticalAlignment="Center"/>
              </StackPanel>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </StackPanel>
    </ScrollViewer>
  </DockPanel>
</Window>
